  <div {{action 'toggleOpen'}}>{{chef.name}}{{if isOpen 'V' '>'}}</div>
  {{#if isOpen}}
    {{chef.description}}
    {{#link-to 'chefs.chef' chef.id}}<button>Show page</button>{{/link-to}}
