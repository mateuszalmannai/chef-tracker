<div class="flex-container">
  <div class="flex-item">
    <h1>Chef Tracker</h1>
    <p>{{availableChefs.length}} of our {{totalChefCount}} chefs are cooking right now!</p>
    <ul>
      {{#each model as |chef|}}
        {{chef-item chef=chef}}
      {{/each}}
    </ul>
    <hr>
    {{input value=newItem}}
    <button {{action 'saveNewItem'}}>Save</button>
  </div>
  <div class="flex-item">
    {{outlet}}
  </div>
</div>