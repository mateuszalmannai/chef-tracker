<div class="flex-container">
  <div class="flex-item">
    <h1>Chef Tracker</h1>
    <p>{{availableChefs.length}} of our {{totalChefCount}} chefs are cooking right now!</p>
    <ul>
      {{#each model as |chef|}}
        {{#if chef.hereToday}}
          <li class="cooking">
            {{#link-to 'chefs.chef' chef.id}}{{chef.name}}{{/link-to}}
            <button {{action 'exit' chef}}>Exit</button>
          </li>
        {{else}}
          <li class="not-cooking">
            {{chef.name}}
            <button {{action 'enter' chef}}>Enter</button>
            <button {{action 'destroyItem' chef}}>Fire</button>
          </li>
        {{/if}}
      {{/each}}
    </ul>
    <hr>
    {{input value=newItem}}
    <button {{action 'saveNewItem'}}>Save</button>
  </div>
  <div class="flex-item">
    {{outlet}}
  </div>
</div>